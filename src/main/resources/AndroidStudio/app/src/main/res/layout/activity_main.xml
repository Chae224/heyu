<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">


    <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hey U !"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/MainName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:hint="Please type your name" />

    <EditText
        android:id="@+id/MainPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MainName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="20dp"
        android:hint="Please enter your password" />

    <Button

        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="60dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Entrer" />

    <TextView

        android:id="@+id/text2View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="-4dp"
        android:gravity="center"
        android:text="Pas encore de compte ?"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button2"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2View"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CrÃ©er un compte"
        android:textSize="10sp" />

</RelativeLayout>