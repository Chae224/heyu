<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="SearchActivity">


    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="147dp"
        android:layout_height="128dp"
        android:layout_below="@+id/text2View"
        android:layout_marginTop="65dp"
        android:gravity="center" />

    <Button
        android:id="@+id/modifySettingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-14dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Mon compte" />


    <TextView

        android:id="@+id/text2View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="OÃ¹ es-tu?"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="181dp" />


    <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2View"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="En recherche de copains... "
        android:textSize="30sp" />

    <in.goodiebag.carouselpicker.CarouselPicker
        android:id="@+id/mCarouselPicker"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#DDD"
        app:items_visible="seven"
        />

    <!--TextView
        android:id="@+id/userNearU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2View"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="169dp"
        android:gravity="center"
        android:text="Pas de copain"
        android:textSize="30sp"
        /!-->


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mCarouselPicker"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:max="1000"
        android:text="RadiusCubitus" />

    <TextView
        android:id="@+id/textViewSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Rechercher les copains" />


</RelativeLayout>