<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SearchActivity">


    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="147dp"
        android:layout_height="128dp"
        android:layout_below="@+id/text2View"
        android:layout_marginTop="65dp"
        android:gravity="center" />

    <Button
        android:id="@+id/modifySettingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-14dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Mon compte" />


    <TextView

        android:id="@+id/text2View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="OÃ¹ es-tu?"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="181dp" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="En recherche de copains... "
        android:textSize="30sp"
        android:layout_below="@+id/text2View" />

    <TextView
        android:id="@+id/userNearU"
        android:layout_width="410dp"
        android:layout_height="66dp"
        android:layout_below="@+id/text2View"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="169dp"
        android:gravity="center"
        android:text="Pas de copain"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNearU"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Rechercher les copains" />


</RelativeLayout>